@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "LayoutWithBreadcrumb.cshtml";

    var contactForm = new Crito.Models.ContactForm();
}

<!-- contact info section -->
<section>
    <div class="contact-info-section">
        <div class="container">
            <div class="infobox">
                <div class="circle"><i class="fa-sharp fa-solid fa-location-dot"></i></i></div>
                <div class="info">
                    <h5>Visit us</h5>
                    <p>@Model.Value("contactInformationStreetName")</p>
                    <p>@Model.Value("contactInformationPostalCode") @Model.Value("contactInformationCity")</p>
                </div>
            </div>

            <div class="infobox">
                <div class="circle"><i class="fa-solid fa-phone"></i></div>
                <div class="info">
                    <h5>Call us</h5>
                    <p>@Model.Value("contactInformationPhoneNumber1")</p>
                    <p>@Model.Value("contactInformationPhoneNumber2")</p>
                </div>
            </div>

            <div class="infobox">
                <div class="circle"><i class="fa-solid fa-envelope"></i></div>
                <div class="info">
                    <h5>Email us</h5>
                    <p>@Model.Value("contactInformationEmail1")</p>
                    <p>@Model.Value("contactInformationEmail2")</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- contact form section -->
<section>
    <div class="contactform-section">
        <div class="container">
            <h3>Leave us a message for any information.</h3>

            @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))

            {
                <div asp-validation-summary="All"></div>
                
                <input asp-for="@contactForm.Name" type="text" placeholder="Name*">
                <input asp-for="@contactForm.Email" type="text" placeholder="Email*">
                <textarea asp-for="@contactForm.Message" placeholder="Yout Message"></textarea>
                <div>
                    <button type="submit" class="btn-theme">Send Message <i class="fa-regular fa-arrow-up-right"></i></button>
                </div>
            }
        </div>
    </div>
</section>

<!-- google maps section -->
<section class="google-map-section">
    <iframe src="@Model.Value("googleMapsURL")" width="100%" height="620" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>    
</section>

